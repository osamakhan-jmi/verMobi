package com.okSpring.verMobi.Utils;


import java.util.logging.Logger;
import java.io.IOException;
import java.io.InputStream;
import java.net.URLConnection;


import java.net.URL; 

public class SMS {

	public static Logger LOG = Logger.getLogger(SMS.class.getName());

    public static Boolean sendSMS(String to, String message) {

    	String urlString =  "https://smsapi.engineeringtgr.com/send/?Mobile=" + "9650768099" + 
				  		 "&Password=" + "B7928G" + 
				  		 "&Message=" + message +
				  		 "&To=" + to +
				  		 "&Key=" + "osamahEJxbDsUrl4RdMw";
        try {
            URL url = new URL(urlString);
            URLConnection urlcon = url.openConnection();
            InputStream stream = urlcon.getInputStream();
            int i;
            String response="";
            while ((i = stream.read()) != -1) {
                response+=(char)i;
            }
            if(response.contains("success")){
            	LOG.info("Successfully send SMS");  
                return true;
            }else{
            	LOG.info(response);
                return false;
            }
        } catch (IOException e) {
        	LOG.info(e.getMessage());
            return false;
        }
    }
}
